<button
  id="copy-btn"
  aria-label="Copiar URL"
  class="group relative h-6 w-6 text-secondary hover:text-secondary-light transition-all duration-200 rounded-md p-1 cursor-pointer z-20 hidden"
>
  <svg
    id="copy-icon"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="absolute inset-0 h-6 w-6 transition-all duration-200 group-hover:scale-110"
  >
    <rect width="8" height="4" x="8" y="2" rx="1" ry="1"></rect>
    <path d="M8 4H6a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-2"></path>
    <path d="M16 4h2a2 2 0 0 1 2 2v4"></path>
    <path d="M21 14H11"></path>
    <path d="m15 10-4 4 4 4"></path>
  </svg>

  <!-- Icono de confirmaciÃ³n (oculto inicialmente) -->
  <svg
    id="check-icon"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="absolute inset-0 h-6 w-6 scale-0 opacity-0 transition-all duration-200 text-green-500"
  >
    <path d="M20 6 9 17l-5-5"></path>
  </svg>

  <!-- Tooltip -->
  <span
    class="absolute -top-8 left-1/2 -translate-x-1/2 bg-gray-800 text-white text-xs rounded px-2 py-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200 delay-800 whitespace-nowrap"
  >
    Copiar URL
  </span>
</button>
